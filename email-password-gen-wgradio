pip install gradio

import string
import random
import gradio as gr

#email generator
def emailgen():
    username_length = random.randint(5, 10)
    domain_length = random.randint(5, 7)
    tld = random.choice(['com', 'net', 'org', 'io', 'tech'])

    username = ''.join(random.choice(string.ascii_lowercase + string.digits) for _ in range(username_length))
    domain = ''.join(random.choice(string.ascii_lowercase) for _ in range(domain_length))
    email = f"{username}@{domain}.{tld}"
    return email

#set password length, cases, digits, and additioanl characters
def passgen(length, use_uppercase, use_lowercase, use_digits, use_special):
    characters = ""
    if use_uppercase:
        characters += string.ascii_uppercase
    if use_lowercase:
        characters += string.ascii_lowercase
    if use_digits:
        characters += string.digits
    if use_special:
        characters += string.punctuation

    if not characters:
        return "Please select at least one character set."

    password = ''.join(random.choice(characters) for i in range(length))
    return password

def generate_all_passwords_and_emails(length, use_uppercase, use_lowercase, use_digits, use_special):
    password = passgen(length, use_uppercase, use_lowercase, use_digits, use_special)
    email = emailgen()
    return f"Email: {email}\n Password: {password}"

#interface for combined generator
iface = gr.Interface(
    fn=generate_all_passwords_and_emails,
    inputs=[
        gr.Slider(minimum=4, maximum=32, step=1, value=8, label="Password Length"),
        gr.Checkbox(label="Include Uppercase Letters", value=True),
        gr.Checkbox(label="Include Lowercase Letters", value=True),
        gr.Checkbox(label="Include Digits", value=True),
        gr.Checkbox(label="Include Special Characters", value=True)
    ],
    outputs="text",
    title="Random Email and Password Generator",
    description="Generate a random email and customized password."
).launch(debug=True)


